<div class="col-md-4 col-md-offset-4">
    <% if flash[:errors] %>
        <% flash[:errors].each do |error|%>
        <p><%= error%></p>      
        <%end%>
    <% end %>
</div>

<div class="col-md-4 col-md-offset-4">
  <h1>Just a few quick things to setup your account...</h1><br>
  <form class="border border-light p-5" action="<%=registration_path(resource_name)%>" method="post">
      <input name="utf8" type="hidden" value="" class="">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" class="">

      <!-- <p class="h4 mb-4">Sign in</p> -->

      <!-- Email -->
      <% if params[:email].present?%>
        <input type="hidden" id="defaultLoginFormEmail" name="user[email]" class="form-control mb-4" placeholder="email" value="<%=params[:email]%>">
      <%end%>

      <% if @email.present?%>
        <input type="hidden" id="defaultLoginFormEmail" name="user[email]" class="form-control mb-4" placeholder="email" value="<%= @email%>">
      <%end%>
      
      <label class="mb-4"><b>Full Name</b></label>
      <input type="text" id="fullname" name="user[full_name]" class="form-control mb-4" placeholder="Full Name"><br>

      <!-- Password -->
      <label class="mb-4"><b>Password</b></label>
      <input type="password" id="defaultLoginFormPassword" name="user[password]" class="form-control mb-4" placeholder="Password"><br>

      <button class="btn btn-info btn-block my-4" type="submit">Ready</button>
      
      

  </form>
  <%#= render "devise/shared/links" %>
</div>